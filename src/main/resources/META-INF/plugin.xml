<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>react.css.module.all</id>
    <name>react.css.module.all</name>
    <version>0.0.3</version>
    <vendor>Peppa</vendor>
    <description><![CDATA[
     <p>react-css-module-all</p>
     <h4>support father selector in scss file</h4>
     <ul>
         <li>auto detected css module classname add completion</li>
         <li>enable support & in scss file</li>
         <li>find reference support</li>
     </ul>
     <h2>NOT SUPPORT</h2>
     <ul>
        <li>hover show style content</li>
        <li>.fooBar auto transform ['foo-bar']</li>
        <li>复杂的选择器判断</li>
     </ul>
    ]]></description>

    <change-notes><![CDATA[
         <h2>0.0.3</h2>
          <ul>
            <li>支持了较为复杂的 parents selector 情况</li>
          </ul>
        <h2>0.0.2</h2>
        <h3>New Feature</h3>
        <ul>
            <li>简单支持了scss & 选择器</li>
            <li>支持跳转到 style 内部</li>
            <li>支持逗号分隔的选择器</li>
        </ul>
]]></change-notes>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>JavaScript</depends>
    <depends>NodeJS</depends>
    <depends>com.intellij.css</depends>




    <resource-bundle>messages.MyBundle</resource-bundle>


    <extensions defaultExtensionNs="com.intellij">
        <psi.referenceContributor implementation="com.example.css.CssModulesIndexedStylesVarPsiReferenceContributor" />
        <completion.contributor language="TypeScript JSX" implementationClass="com.example.css.CssModulesClassNameCompletionContributor" />
        <completion.contributor language="JSX Harmony" implementationClass="com.example.css.CssModulesClassNameCompletionContributor" />
    </extensions>


</idea-plugin>
